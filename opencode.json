{
  "$schema": "https://opencode.ai/config.json",
  
  "model": "opencode/grok-code",
  
  "tools": {
    "write": true,
    "edit": true,
    "bash": true,
    "read": true,
    "grep": true,
    "glob": true,
    "list": true,
    "webfetch": true,
    "patch": true,
    "skill": true,
    "todowrite": true,
    "todoread": true
  },
  
  "permission": {
    "edit": "allow",
    "bash": {
      "git push": "ask",
      "git push --force": "deny",
      "rm -rf": "ask",
      "dotnet pack": "allow",
      "dotnet build": "allow",
      "dotnet test": "allow",
      "dotnet publish": "ask",
      "dotnet nuget push": "ask",
      "gh release create": "ask",
      "git checkout main": "ask",
      "git merge": "ask",
      "*": "allow"
    },
    "webfetch": "allow",
    "doom_loop": "ask",
    "external_directory": "ask",
    "skill": {
      "*": "allow"
    }
  },
  
  "agent": {
    "product-owner": {
      "mode": "primary",
      "description": "Stakeholder liaison coordinating the development team. Manages priorities, delegates to specialized agents, and synthesizes results.",
      "model": "opencode/grok-code",
      "temperature": 0.3,
      "prompt": "{file:./.opencode/agent/product-owner.md}",
      "tools": {
        "write": false,
        "edit": false,
        "bash": false,
        "patch": false,
        "webfetch": true,
        "read": true,
        "grep": true,
        "glob": true,
        "list": true,
        "skill": true,
        "todowrite": true,
        "todoread": true
      },
      "permission": {
        "edit": "deny",
        "bash": "deny"
      }
    },
    
    "solution-architect": {
      "mode": "subagent",
      "description": "Design overall architecture, establish patterns, define abstractions and extensibility points.",
      "model": "opencode/glm-4.7-free",
