      "prompt": "{file:./.opencode/agent/solution-architect.md}",
      "tools": {
        "write": false,
        "edit": false,
        "bash": false,
        "webfetch": true,
        "read": true,
        "grep": true,
        "glob": true,
        "list": true,
        "skill": true
      }
    },
    
    "api-designer": {
