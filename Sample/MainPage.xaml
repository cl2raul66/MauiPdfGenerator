<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Sample.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Grid
        Padding="30"
        ColumnDefinitions="{OnIdiom Desktop='*,auto',
                                    Default='*'}"
        ColumnSpacing="{OnIdiom Default='30',
                                Phone='0'}"
        RowDefinitions="{OnIdiom Desktop='*',
                                 Default='auto,*'}"
        RowSpacing="{OnIdiom Default='0',
                             Phone='30'}">
        <VerticalStackLayout Spacing="{OnIdiom Default='25', Phone='8'}">
            <Image
                Aspect="AspectFit"
                HeightRequest="185"
                SemanticProperties.Description="dot net bot in a race car number eight"
                Source="dotnet_bot.png" />
            <Label
                SemanticProperties.HeadingLevel="Level1"
                Style="{StaticResource Headline}"
                Text="Hello, World!" />
            <Label
                SemanticProperties.Description="Welcome to dot net Multi platform App U I"
                SemanticProperties.HeadingLevel="Level2"
                Style="{StaticResource SubHeadline}"
                Text="Welcome to &#10; Maui PDF Generator library" />
        </VerticalStackLayout>
        <ScrollView Grid.Row="{OnIdiom Default='0', Phone='1'}" Grid.Column="{OnIdiom Default='1', Phone='0'}">
            <VerticalStackLayout Spacing="{OnIdiom Default='15', Phone='12'}">
                <Label
                    FontAttributes="Bold"
                    FontSize="16"
                    Text="View Showcases" />
                <Button
                    x:Name="GenerateParagraphShowcase"
                    Clicked="GenerateParagraphShowcase_Clicked"
                    HorizontalOptions="Fill"
                    Text="Paragraph Showcase" />
                <Button
                    x:Name="GenerateImageShowcase"
                    Clicked="GenerateImageShowcase_Clicked"
                    HorizontalOptions="Fill"
                    Text="Image Showcase" />
                <Button
                    x:Name="GenerateHorizontalLineShowcase"
                    Clicked="GenerateHorizontalLineShowcase_Clicked"
                    HorizontalOptions="Fill"
                    Text="HorizontalLine Showcase" />

                <Label
                    Margin="0,15,0,0"
                    FontAttributes="Bold"
                    FontSize="16"
                    Text="Layout Showcases" />
                <Button
                    x:Name="GenerateVerticalStackLayoutShowcase"
                    Clicked="GenerateVerticalStackLayoutShowcase_Clicked"
                    HorizontalOptions="Fill"
                    Text="VerticalStackLayout Showcase" />
                <Button
                    x:Name="GenerateHorizontalStackLayoutShowcase"
                    Clicked="GenerateHorizontalStackLayoutShowcase_Clicked"
                    HorizontalOptions="Fill"
                    Text="HorizontalStackLayout Showcase" />
                <Button
                    x:Name="GenerateGridShowcase"
                    Clicked="GenerateGridShowcase_Clicked"
                    HorizontalOptions="Fill"
                    Text="Grid Showcase" />
                <Button
                    HorizontalOptions="Fill"
                    Clicked="GenerateIssue"
                    Text="issue 28" />
            </VerticalStackLayout>
        </ScrollView>
    </Grid>

</ContentPage>
