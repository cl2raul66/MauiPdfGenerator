<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Sample.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Grid
        Padding="30"
        ColumnDefinitions="{OnIdiom Desktop='*,auto',
                                    Default='*'}"
        ColumnSpacing="{OnIdiom Default='30',
                                Phone='0'}"
        RowDefinitions="{OnIdiom Desktop='*',
                                 Default='auto,*'}"
        RowSpacing="{OnIdiom Default='0',
                             Phone='30'}">
        <VerticalStackLayout Spacing="{OnIdiom Default='25', Phone='8'}">
            <Image
                Aspect="AspectFit"
                HeightRequest="185"
                SemanticProperties.Description="dot net bot in a race car number eight"
                Source="dotnet_bot.png" />
            <Label
                SemanticProperties.HeadingLevel="Level1"
                Style="{StaticResource Headline}"
                Text="Hello, World!" />
            <Label
                SemanticProperties.Description="Welcome to dot net Multi platform App U I"
                SemanticProperties.HeadingLevel="Level2"
                Style="{StaticResource SubHeadline}"
                Text="Welcome to &#10;.NET Multi-platform App UI" />
        </VerticalStackLayout>
        <ScrollView Grid.Row="{OnIdiom Default='0', Phone='1'}" Grid.Column="{OnIdiom Default='1', Phone='0'}">
            <VerticalStackLayout Spacing="{OnIdiom Default='15', Phone='12'}">
                <Button
                    x:Name="GeneratePdfOnlyParagraph"
                    Clicked="GeneratePdfOnlyParagraph_Clicked"
                    HorizontalOptions="Fill"
                    Text="Generate PDF file, only paragraph" />
                <Button
                    x:Name="GeneratePdfOnlyImage"
                    Clicked="GeneratePdfOnlyImage_Clicked"
                    HorizontalOptions="Fill"
                    Text="Generate PDF file, only image" />
                <Button
                    x:Name="GeneratePdfWithHorizontalLine"
                    Clicked="GeneratePdfWithHorizontalLine_Clicked"
                    HorizontalOptions="Fill"
                    Text="Generate PDF file, with HorizontalLine" />
                <Button
                    x:Name="GeneratePdfWithStackLayout"
                    Clicked="GeneratePdfWithStackLayout_Clicked"
                    HorizontalOptions="Fill"
                    Text="Generate PDF file, with stack layout" />
                <Button
                    x:Name="GeneratePdfWithGrid"
                    Clicked="GeneratePdfWithGrid_Clicked"
                    HorizontalOptions="Fill"
                    Text="Generate PDF file, with grid" />
                <Button
                    x:Name="GeneratePdf"
                    Clicked="GeneratePdf_Clicked"
                    HorizontalOptions="Fill"
                    Text="Generate PDF file" />
            </VerticalStackLayout>
        </ScrollView>
    </Grid>

</ContentPage>
